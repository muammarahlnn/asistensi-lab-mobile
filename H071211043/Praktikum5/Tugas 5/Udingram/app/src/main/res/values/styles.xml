<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="circularImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
        <item name="shapeAppearance">@style/circleShapeAppearance</item>
    </style>

    <style name="circleShapeAppearance">
        <item name="cornerSize">50%</item>
    </style>

    <style name="circularImageViewWithStroke">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
        <item name="shapeAppearanceOverlay">@style/circleShapeAppearanceWithStroke</item>
    </style>

    <style name="circleShapeAppearanceWithStroke">
        <item name="cornerSize">50%</item>
        <item name="strokeWidth">2dp</item>
        <item name="strokeColor">@android:color/black</item>
    </style>


</resources>